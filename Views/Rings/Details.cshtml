@model projectE.Models.Ring

@{
    ViewBag.Title = "Details";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}

<h2>Details</h2>
<div>
    <table class="wiki_table">
        <tbody>
            <tr>
                <th style="text-align: center;" colspan="2"> <h2>@Html.DisplayFor(model => model.Ring_Name)</h2> </th>
            </tr>
            <tr>
                <td style="text-align: center;" colspan="2"><img src="/file/Elden-Ring/crimson_amber_medallion_talisman_elden_ring_wiki_guide_200px.png" alt="crimson amber medallion talisman elden ring wiki guide 200px"></td>
            </tr>
            <tr>
                <td>Weight</td>
                <td>@Html.DisplayFor(model => model.Weigth)</td>
            </tr>
            <tr>
                <td colspan="2">
                    <img title="item_effect_icon_elden_ring_wiki_guide_18px" src="https://eldenring.wiki.fextralife.com/file/Elden-Ring/item_effects_icon_elden_ring_wiki_guide_55px_18px.png" alt="item effects icon elden ring wiki guide 55px 18px" width="18" height="18">Effect
                    <div class="lineleft">
                        @Html.DisplayFor(model => model.Effect)
                    </div>
                </td>
            </tr>
        </tbody>
    </table>
</div>
<p>
    @Html.ActionLink("Edit", "Edit", new { id = Model.Ring_ID }) |
    @Html.ActionLink("Back to List", "Index")
</p>

