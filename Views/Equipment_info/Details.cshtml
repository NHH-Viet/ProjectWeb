@model projectE.Models.Equipment_info

@{
    ViewBag.Title = "Details";
    Layout = ViewBag.Check;
}

<table class="wiki_table">
    <tbody>
        <tr>
            <th colspan="2"> <h2>@Html.DisplayFor(model => model.E_Name)</h2> </th>
        </tr>
        <tr>
            <td style="text-align: center;" colspan="2"><img title="Elden Ring Dagger" src="/file/Elden-Ring/dagger_dagger_weapon_elden_ring_wiki_guide_200px.png" alt="dagger dagger weapon elden ring wiki guide 200px" width="200" height="200"></td>
        </tr>
        <tr>
            <td>
                <img style="float: left;" title="Attack Power" src="https://eldenring.wiki.fextralife.com/file/Elden-Ring/attack-power-elden-ring-wiki-guide-18.png" alt="attack power elden ring wiki guide 18" width="18" height="18">Attack
                <div class="lineleft">
                    <span style="color: #ffffff;"><a class="wiki_link" style="color: #ffffff;" title="Elden Ring Physical Damage" href="/Physical+Damage">Phy</a>&nbsp;@Html.DisplayFor(model => model.Phy_guard)</span>
                    <br>
                    <a class="wiki_link" style="color: #3fbddd;" title="Elden Ring Magic Damage" href="/Magic+Damage">Mag</a>&nbsp;@Html.DisplayFor(model => model.Mag_dame)
                    <br>
                    <span style="color: #ff9900;"><a class="wiki_link" style="color: #cc9d57;" title="Elden Ring Fire Damage" href="/Fire+Damage">Fire</a></span>&nbsp;@Html.DisplayFor(model => model.Fire_dame)
                    <br>
                    <span style="color: #ffff00;"><a class="wiki_link" style="color: #d5d559;" title="Elden Ring Lightning Damage" href="/Lightning+Damage">Ligt</a></span>&nbsp;@Html.DisplayFor(model => model.Ligh_dame)
                    <br>
                    <span style="color: #ffcc99;"><a class="wiki_link" style="color: #ffcc99;" title="Elden Ring Holy Damage" href="/Holy+Damage">Holy</a></span>&nbsp;@Html.DisplayFor(model => model.Holy_dame)
                    <br>
                    <span style="color: #ff0000;"><a class="wiki_link" style="color: #c64949;" title="Elden Ring Critical Damage" href="/Critical+Damage">Crit</a></span>&nbsp;@Html.DisplayFor(model => model.Critboot)
                </div>
            </td>
            <td>
                <img style="float: left;" title="Guarded Damage Negation" src="https://eldenring.wiki.fextralife.com/file/Elden-Ring/guarded-damage-negation-elden-ring-wiki-guide-18.png" alt="guarded damage negation elden ring wiki guide 18" width="18" height="18">Guard
                <div class="lineleft">
                    Phy&nbsp;@Html.DisplayFor(model => model.Phy_guard)
                    <br>
                    <span style="color: #3fbddd;">Mag</span>&nbsp;@Html.DisplayFor(model => model.Mag_guard)
                    <br>
                    <span style="color: #cc9d57;">Fire</span> &nbsp;@Html.DisplayFor(model => model.Fire_guard)
                    <br>
                    <span style="color: #d5d559;">Ligt</span> &nbsp;@Html.DisplayFor(model => model.Ligh_guard)
                    <br>
                    <span style="color: #ffcc99;">Holy</span> &nbsp;@Html.DisplayFor(model => model.Holy_guard)
                    <br>
                    <span style="color: #666699;">Boost</span>&nbsp;@Html.DisplayFor(model => model.Guardboot)
                </div>
            </td>
        </tr>
        <tr>
            <td>
                <img title="Attribute Scaling" src="https://eldenring.wiki.fextralife.com/file/Elden-Ring/attribute-scaling-elden-ring-wiki-guide-18.png" alt="attribute scaling elden ring wiki guide 18" width="18" height="18">Scaling
                <div class="lineleft">
                    @if (Model.Scl_Str != null)
                    {<a class="wiki_link" title="Elden Ring Strength" href="/Strength" target="">Str</a>@Html.DisplayFor(model => model.Scl_Str)}
                    <br>
                    @if (Model.Scl_Dex != null)
                    {<a class="wiki_link" title="Elden Ring Strength" href="/Strength" target="">Dex</a>@Html.DisplayFor(model => model.Scl_Dex)}
                    <br>
                    @if (Model.Scl_Int != null)
                    {<a class="wiki_link" title="Elden Ring Strength" href="/Strength" target="">Int</a>@Html.DisplayFor(model => model.Scl_Int)}
                    <br>
                    @if (Model.Scl_Fai != null)
                    {<a class="wiki_link" title="Elden Ring Strength" href="/Strength" target="">Fai</a>@Html.DisplayFor(model => model.Scl_Fai)}
                    <br>
                    @if (Model.Scl_Arc != null)
                    {<a class="wiki_link" title="Elden Ring Strength" href="/Strength" target="">Arc</a>@Html.DisplayFor(model => model.Scl_Arc)}
                </div>
            </td>
            <td>
                <img style="float: left;" title="Attributes Requirement" src="https://eldenring.wiki.fextralife.com/file/Elden-Ring/attributes-required-elden-ring-wiki-guide-18.png" alt="attributes required elden ring wiki guide 18" width="18" height="18">Requires
                <div class="lineleft">
                    @if (Model.R_Scl_Str != null)
                    {<a class="wiki_link" title="Elden Ring Strength" href="/Strength" target="">Str</a>@Html.DisplayFor(model => model.R_Scl_Str)}
                    <br>
                    @if (Model.R_Scl_Dex != null)
                    {<a class="wiki_link" title="Elden Ring Strength" href="/Strength" target="">Dex</a>@Html.DisplayFor(model => model.R_Scl_Dex)}
                    <br>
                    @if (Model.R_Scl_Int != null)
                    {<a class="wiki_link" title="Elden Ring Strength" href="/Strength" target="">Int</a>@Html.DisplayFor(model => model.R_Scl_Int)}
                    <br>
                    @if (Model.R_Scl_Fai != null)
                    {<a class="wiki_link" title="Elden Ring Strength" href="/Strength" target="">Fai</a>@Html.DisplayFor(model => model.R_Scl_Fai)}
                    <br>
                    @if (Model.R_Scl_Arc != null)
                    {<a class="wiki_link" title="Elden Ring Strength" href="/Strength" target="">Arc</a>@Html.DisplayFor(model => model.R_Scl_Arc)}

                </div>
            </td>
        </tr>
        <tr>
            <td><a class="wiki_link" title="Elden Ring Daggers" href="/Daggers" target="">Type</a>@Html.DisplayFor(model => model.ET_ID)</td>
            
        </tr>
        <tr>
            <td><a class="wiki_link" title="Elden Ring Quickstep" href="/Quickstep" target="">SKill</a>@Html.DisplayFor(model => model.Skill_name):@Html.DisplayFor(model => model.SCost)</td>
        </tr>
        <tr>
            <td><a class="wiki_link" title="Elden Ring Weight" href="/Weight">Wgt.</a>&nbsp;@Html.DisplayFor(model => model.Weigth)</td>
        </tr>
    </tbody>
</table>
<p>
    @Html.ActionLink("Edit", "Edit", new { id = Model.E_ID }) |
    @Html.ActionLink("Back to List", "Index")
</p>
